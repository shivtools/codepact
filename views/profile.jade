doctype html
html(lang="en")
	head
		title= "codepact"
		link(href="/css/bootstrap.min.css" type="text/css" rel="stylesheet")
		link(href="/css/nprogress.css" type="text/css" rel="stylesheet")
		link(href="/css/styles.css" type="text/css" rel="stylesheet")
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
		<script src="/js/frameworks/jquery.knob.min.js"></script>
		script.
			$(".dial").knob({
				'min': 0,
				'max': 100,
				'width': 300,
				'height': 300,
				'change' : function (v) { console.log(v); }
			});

	body
		h1#main="Profile"
		.checkbox
			h3 Current Status
			.progress
				#progress_bar.progress_bar(role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%")
					span#percent.sr-only
						| 70% Complete

		script.
			var user_id = #{user['profile']['user_id']};
			var github = load_user();

			function load_user() {
				$.ajax({
					url: "../../users/" + user_id,
					dataType: 'json',
					success: function(resp) {
						console.log(resp);
						var user = resp.user;
						var curr_lines = user.github.curr_lines;
						var goal_lines;
						if(user.pacts.daily.is_enabled){
							goal_lines = user.pacts.daily.goal_lines;
						}
						else{
							goal_lines = user.pacts.weekly.goal_lines;
						}

						var percentage = Math.ceil(curr_lines/goal_lines)*100;
						$('#progress_bar').attr('aria-valuenow', percentage);
						$('#progress_bar').css({"width": percentage + "%"});
						$('#percent').html(percentage + "% complete");

						var lines_left = goal_lines-curr_lines;
					},
					error: function(err) {
						console.log(err);
					}
				});
			}

